<Window x:Class="WinTool.View.EditShortcutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinTool.View"
        xmlns:viewmodel="clr-namespace:WinTool.ViewModel"
        xmlns:r="clr-namespace:WinTool.Properties"
        d:DataContext="{d:DesignInstance Type=viewmodel:EditShortcutViewModel}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="{x:Static r:Resources.EnterNewShortcut}" 
        Height="280" 
        Width="450">
    <StackPanel>
        <TextBlock Text="{Binding Shortcut}"
                   FontSize="30"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0 40 0 0"/>

        <TextBlock Text="{x:Static r:Resources.EditShortcutTip}"
                   Margin="20 40 0 0"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 40 0 0">
            <Button Content="{x:Static r:Resources.Save}"
                    Command="{Binding SaveCommand}"
                    Height="32"
                    Width="120"/>
            <Button Content="{x:Static r:Resources.Cancel}"
                    Command="{Binding CancelCommand}"
                    Margin="10 0 0 0"
                    Height="32"
                    Width="120"/>
        </StackPanel>
    </StackPanel>
</Window>
