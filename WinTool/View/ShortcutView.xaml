<UserControl x:Class="WinTool.View.ShortcutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinTool.View"
             d:DataContext="{d:DesignInstance Type=viewmodel:ShortcutViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Expander Padding="0 4 0 10">
        <Expander.Header>
            <StackPanel Orientation="Horizontal"
                        Height="32">
                <TextBlock Text="{Binding Shortcut}"
                           FontWeight="SemiBold"
                           Width="150" />
                <Button Content="Edit"
                        Command="{Binding EditShortcutCommand}" />
                <TextBlock Text="{Binding Description}" />
            </StackPanel>
        </Expander.Header>
    </Expander>
</UserControl>
