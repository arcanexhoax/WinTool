<UserControl x:Class="WinTool.View.FastFileCreationShortcutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinTool.View"
             xmlns:viewmodel="clr-namespace:WinTool.ViewModel"
             xmlns:r="clr-namespace:WinTool.Properties"
             d:DataContext="{d:DesignInstance Type=viewmodel:FastFileCreationShortcutViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Expander Padding="0 4 0 10">
        <Expander.Header>
            <StackPanel Orientation="Horizontal"
                        Height="32">
                <TextBlock Text="{Binding BackingShortcut}"
                           FontWeight="SemiBold"
                           Width="150" />
                <TextBlock Text="{Binding Description}" />
            </StackPanel>
        </Expander.Header>

        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{x:Static r:Resources.NewFileTemplate}" />
                <TextBlock Text="(?)"
                           Margin="5 0 0 0"
                           ToolTip="{x:Static r:Resources.NewFileTemplateToolTip}" />
            </StackPanel>

            <TextBox Text="{Binding NewFileTemplate, UpdateSourceTrigger=PropertyChanged}"
                     MinWidth="150"
                     HorizontalAlignment="Left"
                     Margin="0 5 0 0"
                     PreviewTextInput="OnTextInput" />
        </StackPanel>
    </Expander>
</UserControl>
