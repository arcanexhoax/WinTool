<UserControl x:Class="WinTool.Views.Shortcuts.ShortcutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c="clr-namespace:Hoax.WpfConverters;assembly=Hoax.WpfConverters"
             xmlns:vm="clr-namespace:WinTool.ViewModels.Shortcuts"
             d:DataContext="{d:DesignInstance Type=vm:ShortcutViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <c:BoolToVisibilityConverter x:Key="BoolToVisConverter" />
    </UserControl.Resources>

    <Grid Height="32">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="0.75*" />
            <ColumnDefinition Width="0.25*" />
        </Grid.ColumnDefinitions>

        <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}"
                   FontSize="18"
                   Margin="0 0 16 0"
                   Text="{Binding Icon}" />

        <TextBlock Text="{Binding Description}"
                   Grid.Column="1"/>

        <Border Grid.Column="2">
            <StackPanel Orientation="Horizontal"
                        Background="Transparent"
                        HorizontalAlignment="Right">
                <Button x:Name="EditButton"
                        Visibility="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=StackPanel}, Converter={StaticResource BoolToVisConverter}}"
                        Command="{Binding EditShortcutCommand}"
                        Margin="0 0 8 0">
                    <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}"
                               FontSize="12"
                               Text="&#xE70F;" />
                </Button>
                
                <TextBlock Text="{Binding Shortcut}"
                           FontWeight="SemiBold" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
