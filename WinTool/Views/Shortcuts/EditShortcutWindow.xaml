<view:DialogWindow 
    x:Class="WinTool.Views.Shortcuts.EditShortcutWindow"
    x:TypeArguments="model:EditShortcutInput,gke:Shortcut"
    xmlns:model="clr-namespace:WinTool.Models"
    xmlns:gke="clr-namespace:GlobalKeyInterceptor;assembly=GlobalKeyInterceptor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:WinTool.Views"
    xmlns:vm="clr-namespace:WinTool.ViewModels.Shortcuts"
    xmlns:p="clr-namespace:WinTool.Properties"
    xmlns:c="clr-namespace:Hoax.WpfConverters;assembly=Hoax.WpfConverters"
    d:DataContext="{d:DesignInstance Type=vm:EditShortcutViewModel}"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    Title="{x:Static p:Resources.EnterNewShortcut}" 
    SizeToContent="Height"
    Width="500">
    <Window.Resources>
        <c:BoolToVisibilityConverter x:Key="boolToVis" />
    </Window.Resources>

    <Border Padding="20">
        <StackPanel>
            <TextBlock Text="{Binding Shortcut}"
                       FontSize="30"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0 40 0 0" />

            <TextBlock Text="{x:Static p:Resources.EditShortcutTip}"
                       Margin="0 40 0 0" />
            <TextBlock Text="{Binding ErrorText}"
                       Visibility="{Binding IsErrorShown, Converter={StaticResource boolToVis}}"
                       Foreground="Red" />

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 40 0 0">
                <Button Content="{x:Static p:Resources.Save}"
                        Command="{Binding SaveCommand}"
                        Height="32"
                        Width="120" />
                <Button Content="{x:Static p:Resources.Cancel}"
                        Command="{Binding CancelCommand}"
                        Margin="10 0 0 0"
                        Height="32"
                        Width="120" />
            </StackPanel>
        </StackPanel>
    </Border>
</view:DialogWindow>
