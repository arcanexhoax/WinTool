<view:DialogWindow x:Class="WinTool.Views.Shortcuts.CreateFileWindow"
                   x:TypeArguments="sys:String,model:CreateFileOutput"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:model="clr-namespace:WinTool.Models"
                   xmlns:p="clr-namespace:WinTool.Properties"
                   xmlns:sys="clr-namespace:System;assembly=mscorlib"
                   xmlns:u="clr-namespace:WinTool.Utils"
                   xmlns:view="clr-namespace:WinTool.Views"
                   xmlns:vm="clr-namespace:WinTool.ViewModels.Shortcuts"
                   mc:Ignorable="d"
                   d:DataContext="{d:DesignInstance Type=vm:CreateFileViewModel}"
                   Icon="/Resources/logo.png"
                   ResizeMode="NoResize"
                   SizeToContent="Height"
                   WindowStartupLocation="CenterScreen"
                   Title="{x:Static p:Resources.CreateFile}"
                   Width="400">
    <Window.InputBindings>
        <KeyBinding Command="{Binding CreateCommand}"
                    Key="Return" />
        <KeyBinding Command="{Binding CloseWindowCommand}"
                    Key="Esc" />
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <Border Style="{StaticResource DialogContentBorderStyle}">
            <StackPanel>
                <TextBlock FontSize="20"
                           FontWeight="SemiBold"
                           Text="{x:Static p:Resources.CreateFile}" />

                <Grid Margin="0 16 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock TextTrimming="CharacterEllipsis"
                               ToolTip="{Binding FullFolderPath}"
                               MaxWidth="95">
                        <Run Text="{Binding RelativeFolderPath}" />/
                    </TextBlock>

                    <TextBox x:Name="textBox"
                             u:TextBoxExtensions.IsTextSelected="{Binding IsTextSelected}"
                             Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="6 0 0 0"
                             VerticalContentAlignment="Center"
                             Grid.Column="1" />
                </Grid>

                <Expander Header="{x:Static p:Resources.Options}"
                          IsExpanded="{Binding AreOptionsOpened}"
                          Margin="0 20 0 20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{x:Static p:Resources.Size}" />
                        <TextBox Text="{Binding Size}"
                                 Margin="16 0 0 0"
                                 Grid.Column="1" />
                        <ComboBox ItemsSource="{Binding SizeUnits}"
                                  SelectedItem="{Binding SelectedSizeUnit, UpdateSourceTrigger=PropertyChanged}"
                                  Width="80"
                                  Margin="5 0 0 0"
                                  Grid.Column="2" />
                    </Grid>
                </Expander>
            </StackPanel>
        </Border>

        <Border Padding="26 0"
                Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Command="{Binding CreateCommand}"
                        Content="{x:Static p:Resources.Create}"
                        HorizontalAlignment="Stretch" />
                <Button Command="{Binding CloseWindowCommand}"
                        Content="{x:Static p:Resources.Cancel}"
                        HorizontalAlignment="Stretch"
                        Grid.Column="2" />
            </Grid>
        </Border>
    </Grid>
</view:DialogWindow>
