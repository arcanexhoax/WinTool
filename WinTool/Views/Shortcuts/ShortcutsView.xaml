<UserControl x:Class="WinTool.Views.Shortcuts.ShortcutsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:p="clr-namespace:WinTool.Properties"
             xmlns:shortcuts="clr-namespace:WinTool.Views.Shortcuts"
             xmlns:vm="clr-namespace:WinTool.ViewModels.Shortcuts"
             d:DataContext="{d:DesignInstance Type=vm:ShortcutsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="10">
        <ItemsControl ItemsSource="{Binding Shortcuts}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <shortcuts:ShortcutView DataContext="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Border>
</UserControl>
