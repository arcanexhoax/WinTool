<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:WinTool.UI.Converters">
    <c:ExpandArrowAngleConverter x:Key="ExpandArrowAngleConverter" />

    <Style TargetType="Expander">
        <Setter Property="Padding" Value="0 40 0 0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Expander">
                    <DockPanel>
                        <ToggleButton DockPanel.Dock="Top"
                                      IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                      Background="Transparent"
                                      BorderBrush="Transparent"
                                      Focusable="False">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Background"
                                            Value="Transparent" />
                                    <Setter Property="BorderBrush"
                                            Value="Transparent" />
                                    <Setter Property="BorderThickness"
                                            Value="0" />
                                    <Setter Property="OverridesDefaultStyle"
                                            Value="True" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>

                            <Grid Background="Transparent">
                                <ContentPresenter ContentSource="Header" />
                                <Path Width="16"
                                      Height="16"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Right"
                                      Stretch="Uniform"
                                      Stroke="Black"
                                      Data="m21 8.5-9 9-9-9"
                                      RenderTransformOrigin="0.5,0.5">
                                    <Path.RenderTransform>
                                        <RotateTransform Angle="{Binding IsChecked, 
                                            RelativeSource={RelativeSource AncestorType=ToggleButton}, 
                                            Converter={StaticResource ExpandArrowAngleConverter}}" />
                                    </Path.RenderTransform>
                                </Path>
                            </Grid>
                        </ToggleButton>

                        <ContentPresenter x:Name="ExpandSite"
                                          Visibility="Collapsed"
                                          Content="{TemplateBinding Content}"
                                          Margin="{TemplateBinding Padding}"/>
                    </DockPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded"
                                 Value="True">
                            <Setter TargetName="ExpandSite"
                                    Property="Visibility"
                                    Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
