<UserControl x:Class="WinTool.Views.Shortcuts.ShortcutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c="clr-namespace:Hoax.WpfConverters;assembly=Hoax.WpfConverters"
             xmlns:vm="clr-namespace:WinTool.ViewModels.Shortcuts"
             xmlns:p="clr-namespace:WinTool.Properties"
             d:DataContext="{d:DesignInstance Type=vm:ShortcutViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <c:BoolToVisibilityConverter x:Key="BoolToVisConverter" />
    </UserControl.Resources>

    <Grid Height="32">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}"
                   FontSize="18"
                   Margin="0 0 20 0"
                   Text="{Binding Icon}" />

        <TextBlock Text="{Binding Description}"
                   ToolTip="{Binding Description}"
                   TextTrimming="CharacterEllipsis"
                   Grid.Column="1"/>

        <Border Grid.Column="2">
            <StackPanel Orientation="Horizontal"
                        Background="Transparent"
                        HorizontalAlignment="Right">
                <Button x:Name="EditButton"
                        Visibility="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=StackPanel}, Converter={StaticResource BoolToVisConverter}}"
                        Command="{Binding EditShortcutCommand}"
                        Margin="0 0 8 0">
                    <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}"
                               FontSize="12"
                               Text="&#xE70F;" />
                </Button>

                <TextBlock Text="{Binding ShortcutString, TargetNullValue={x:Static p:Resources.NotSpecified}}"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource TextFillColorPrimaryBrush}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShortcutString}" Value="{x:Null}">
                                    <Setter Property="Foreground" Value="{StaticResource SystemFillColorCautionBrush}"/>
                                    <Setter Property="FontWeight" Value="Regular"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
