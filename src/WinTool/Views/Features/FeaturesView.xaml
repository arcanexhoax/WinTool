<UserControl x:Class="WinTool.Views.Features.FeaturesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:p="clr-namespace:WinTool.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Style="{DynamicResource MainContentBorderStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Text="{x:Static p:Resources.Features}"
                       Style="{StaticResource TitleTextBlockStyle}"
                       MaxWidth="1000"/>

            <ScrollViewer Grid.Row="1"
                          Margin="0 24 0 0"
                          Padding="0 0 20 0">
                <StackPanel MaxWidth="1000">
                    <TextBlock Text="{x:Static p:Resources.InputPopup}"
                               Style="{StaticResource BodyStrongTextBlockStyle}" />

                    <Border Style="{DynamicResource CardBorderStyle}"
                            Margin="0 8 0 0">
                        <CheckBox Content="{x:Static p:Resources.EnableSwitchLanguagePopup}"
                                    IsChecked="{Binding EnableSwitchLanguagePopup}"
                                    Height="32"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Left" />
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
