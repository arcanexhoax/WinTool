<views:FluentWindow x:Class="WinTool.Views.MainWindow"
                    x:Name="mainWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:features="clr-namespace:WinTool.Views.Features"
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:p="clr-namespace:WinTool.Properties"
                    xmlns:settings="clr-namespace:WinTool.Views.Settings"
                    xmlns:shortcuts="clr-namespace:WinTool.Views.Shortcuts"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:views="clr-namespace:WinTool.Views"
                    xmlns:vm="clr-namespace:WinTool.ViewModels"
                    mc:Ignorable="d"
                    d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
                    Activated="OnWindowActivated"
                    Closing="OnWindowClosing"
                    Icon="/Resources/logo.png"
                    WindowStartupLocation="CenterScreen"
                    Title="{x:Static p:Resources.WinTool}"
                    Width="1000"
                    Height="600"
                    MinWidth="900"
                    MinHeight="400">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding WindowLoadedCommand}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding WindowClosingCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <tb:TaskbarIcon DoubleClickCommand="{Binding OpenWindowCommand}"
                            IconSource="/Resources/icon.ico"
                            PopupActivation="RightClick"
                            ToolTipText="{x:Static p:Resources.TrayToolTip}"
                            Visibility="Visible">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="{x:Static p:Resources.Open}"
                                  Command="{Binding OpenWindowCommand}" />
                        <Separator />
                        <MenuItem Header="{x:Static p:Resources.Close}"
                                  Command="{Binding CloseWindowCommand}" />
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>

            <ListView x:Name="Tabs"
                      SelectionChanged="OnTabSelected"
                      SelectionMode="Single">
                <ListViewItem x:Name="ShortcutsTab">
                    <ListViewItem.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Icons/keyboard.png"
                                   Height="20"
                                   Width="20"/>
                            <TextBlock Text="{x:Static p:Resources.Shortcuts}"
                                       Margin="16 0 0 0" />
                        </StackPanel>
                    </ListViewItem.Content>
                </ListViewItem>
                <ListViewItem x:Name="FeaturesTab">
                    <ListViewItem.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Icons/idea.png"
                                   Height="20"
                                   Width="20" />
                            <TextBlock Text="{x:Static p:Resources.Features}"
                                       Margin="16 0 0 0" />
                        </StackPanel>
                    </ListViewItem.Content>
                </ListViewItem>
                <ListViewItem x:Name="SettingsTab">
                    <ListViewItem.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Icons/settings.png"
                                   Height="20"
                                   Width="20" />
                            <TextBlock Text="{x:Static p:Resources.Settings}"
                                       Margin="16 0 0 0" />
                        </StackPanel>
                    </ListViewItem.Content>
                </ListViewItem>
            </ListView>

            <ContentControl x:Name="TabContent"
                            Grid.Column="1" />
        </Grid>
    </Border>
</views:FluentWindow>
